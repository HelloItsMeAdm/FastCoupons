<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/intro_bg_screen3">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/ic_money" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ušetříš!"
            android:textColor="@android:color/white"
            android:fontFamily="@font/poppins_h1"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="@dimen/desc_padding"
            android:paddingRight="@dimen/desc_padding"
            android:text="V této aplikaci totiž najdeš kupóny, díky kterým tvoje peněženka nezhubne, za to ty ztloustneš :)"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:fontFamily="@font/poppins_p"
            android:textSize="18dp"
            android:gravity="center_horizontal" />

    </LinearLayout>
</RelativeLayout>